root = true

[*]
indent_style = tab
indent_size = 2
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

[*.{ac,m4,sh,yml}]
indent_size              = 2
indent_style             = space

[*.{dtd,html,inc,php,phpt,rng,wsdl,xml,xsd,xsl}]
indent_size              = 4
indent_style             = space

#[*.md]
#indent_style             = space
#max_line_length          = 80

[COMMIT_EDITMSG]
indent_size              = 4
indent_style             = space
max_line_length          = 80

[*.patch]
trim_trailing_whitespace = false
